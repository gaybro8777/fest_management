<p id="notice"><%= notice %></p>

<h1>Listing Fests</h1>

<%= link_to 'New Fest', new_fest_path, class: "ui primary button" %><br/><br/>

<table class="ui celled padded table dataTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Department</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @fests.each do |fest| %>
      <tr>
        <td><%= fest.name %></td>
        <td><%= fest.description %></td>
        <td><%= fest.department.name %></td>
        <td><%= link_to 'Show', fest %></td>
        <td><%= link_to 'Edit', edit_fest_path(fest) %></td>
        <td><%= link_to 'Destroy', fest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

