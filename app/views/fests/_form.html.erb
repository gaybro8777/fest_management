<%= form_for(@fest) do |f| %>
  <% if @fest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fest.errors.count, "error") %> prohibited this fest from being saved:</h2>

      <ul>
      <% @fest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <div class="ui input"><%= f.text_field :name %></div><br/><br/>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <div class="ui input"><%= f.text_area :description %></div><br/><br/>
  </div>
  <div class="field">
    <%= f.label :department_id %><br>
    <%= f.collection_select :department_id, Department.all, :id, :name, {prompt: "Select Department"}, {class: "ui search dropdown"} %><br/><br/>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "ui primary button" %><br/><br/>
  </div>
<% end %>
